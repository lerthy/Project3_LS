{
  "root": true,
  "env": {
    "browser": true,
    "es2022": true,
    "node": true
  },
  "extends": [
    "eslint:recommended"
  ],
  "parserOptions": {
    "ecmaVersion": "latest",
    "sourceType": "module"
  },
  "ignorePatterns": [
    "coverage/",
    "node_modules/",
    "static/assets/**"
  ],
  "rules": {
    "no-unused-vars": ["error", { "args": "none", "ignoreRestSiblings": true }],
    "no-undef": "error",
    "eqeqeq": ["error", "always"],
    "no-console": ["warn", { "allow": ["error", "warn"] }],
    "indent": ["error", 2],
    "linebreak-style": ["error", "unix"],
    "quotes": ["error", "single"],
    "semi": ["error", "always"],
    "no-debugger": "error"
  }
}
